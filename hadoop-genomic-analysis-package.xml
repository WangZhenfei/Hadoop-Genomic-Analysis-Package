<?xml version="1.0" encoding="UTF-8"?>
<project name="hadoop-genome" default="all">


    <property file="crc-hadoop.properties"/>
    <!-- Uncomment the following property if no tests compilation is needed -->
    <!--
   <property name="skip.tests" value="true"/>
    -->

    <!-- Compiler options -->
    <property name="lib" location="lib"/>


    <property name="compiler.debug" value="on"/>
    <property name="compiler.generate.no.warnings" value="off"/>
    <property name="compiler.args" value=""/>
    <property name="compiler.max.memory" value="128m"/>
    <patternset id="ignored.files">
        <exclude name="**/CVS/**"/>
        <exclude name="**/SCCS/**"/>
        <exclude name="**/RCS/**"/>
        <exclude name="**/rcs/**"/>
        <exclude name="**/.DS_Store/**"/>
        <exclude name="**/.svn/**"/>
        <exclude name="**/.pyc/**"/>
        <exclude name="**/.pyo/**"/>
        <exclude name="**/*.pyc/**"/>
        <exclude name="**/*.pyo/**"/>
        <exclude name="**/.git/**"/>
        <exclude name="**/*.hprof/**"/>
        <exclude name="**/_svn/**"/>
        <exclude name="**/.hg/**"/>
        <exclude name="**/*.lib/**"/>
        <exclude name="**/*~/**"/>
        <exclude name="**/__pycache__/**"/>
        <exclude name="**/.bundle/**"/>
        <exclude name="**/*.rbc/**"/>
        <exclude name="**/vssver.scc/**"/>
        <exclude name="**/vssver2.scc/**"/>
    </patternset>
    <patternset id="library.patterns">
        <include name="*.war"/>
        <include name="*.ear"/>
        <include name="*.apk"/>
        <include name="*.zip"/>
        <include name="*.swc"/>
        <include name="*.ane"/>
        <include name="*.egg"/>
        <include name="*.jar"/>
    </patternset>
    <patternset id="compiler.resources">
        <include name="**/?*.properties"/>
        <include name="**/?*.xml"/>
        <include name="**/?*.gif"/>
        <include name="**/?*.png"/>
        <include name="**/?*.jpeg"/>
        <include name="**/?*.jpg"/>
        <include name="**/?*.html"/>
        <include name="**/?*.dtd"/>
        <include name="**/?*.tld"/>
        <include name="**/?*.ftl"/>
    </patternset>

    <!-- JDK definitions -->

    <property name="jdk.bin.1.6" value="${jdk.home.1.6}/bin"/>
    <path id="jdk.classpath.1.6">
        <fileset dir="${jdk.home.1.6}">
            <include name="lib/deploy.jar"/>
            <include name="lib/dt.jar"/>
            <include name="lib/javaws.jar"/>
            <include name="lib/jce.jar"/>
            <include name="lib/jconsole.jar"/>
            <include name="lib/management-agent.jar"/>
            <include name="lib/plugin.jar"/>
            <include name="lib/sa-jdi.jar"/>
            <include name="../Classes/charsets.jar"/>
            <include name="../Classes/classes.jar"/>
            <include name="../Classes/jsse.jar"/>
            <include name="../Classes/ui.jar"/>
            <include name="lib/ext/apple_provider.jar"/>
            <include name="lib/ext/dnsns.jar"/>
            <include name="lib/ext/localedata.jar"/>
            <include name="lib/ext/sunjce_provider.jar"/>
            <include name="lib/ext/sunpkcs11.jar"/>
        </fileset>
    </path>

    <property name="project.jdk.home" value="${jdk.home.1.6}"/>
    <property name="project.jdk.bin" value="${jdk.bin.1.6}"/>
    <property name="project.jdk.classpath" value="jdk.classpath.1.6"/>


    <!-- Project Libraries -->

    <path id="library.hadoop-ant-1.1.2.classpath">
        <pathelement location="${basedir}/../../../../Applications/hadoop-1.1.2/hadoop-ant-1.1.2.jar"/>
        <pathelement location="${basedir}/../../../../Applications/hadoop-1.1.2/hadoop-core-1.1.2.jar"/>
        <pathelement location="${basedir}/../../../../Applications/hadoop-1.1.2/hadoop-examples-1.1.2.jar"/>
        <pathelement location="${basedir}/../../../../Applications/hadoop-1.1.2/hadoop-test-1.1.2.jar"/>
        <pathelement location="${basedir}/../../../../Applications/hadoop-1.1.2/hadoop-tools-1.1.2.jar"/>
    </path>

    <path id="library.lib.classpath">
        <fileset dir="${basedir}/lib">
            <patternset refid="library.patterns"/>
        </fileset>
    </path>

    <path id="library.lib1.classpath">
        <fileset dir="${basedir}/../../../../Applications/hadoop-1.1.2/lib">
            <patternset refid="library.patterns"/>
        </fileset>
    </path>
    <!-- Register Custom Compiler Taskdefs -->
    <property name="javac2.home" value="${idea.home}/lib"/>
    <path id="javac2.classpath">
        <pathelement location="${javac2.home}/javac2.jar"/>
        <pathelement location="${javac2.home}/jdom.jar"/>
        <pathelement location="${javac2.home}/asm.jar"/>
        <pathelement location="${javac2.home}/asm-commons.jar"/>
        <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
    </path>
    <target name="register.custom.compilers">
        <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
        <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
    </target>

    <!-- Modules -->


    <!-- Module CRC-Hadoop -->

    <dirname property="module.crc-hadoop.basedir" file="${ant.file}"/>


    <property name="module.jdk.home.crc-hadoop" value="${project.jdk.home}"/>
    <property name="module.jdk.bin.crc-hadoop" value="${project.jdk.bin}"/>
    <property name="module.jdk.classpath.crc-hadoop" value="${project.jdk.classpath}"/>

    <property name="compiler.args.crc-hadoop" value="${compiler.args}"/>

    <property name="crc-hadoop.output.dir" value="${module.crc-hadoop.basedir}/out/production/CRC-Hadoop"/>
    <property name="crc-hadoop.testoutput.dir" value="${module.crc-hadoop.basedir}/out/test/CRC-Hadoop"/>

    <path id="crc-hadoop.module.bootclasspath">
        <!-- Paths to be included in compilation bootclasspath -->
    </path>

    <path id="crc-hadoop.module.production.classpath">
        <path refid="${module.jdk.classpath.crc-hadoop}"/>
        <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
        <path refid="library.lib.classpath"/>
        <path refid="library.lib1.classpath"/>
        <path refid="library.hadoop-ant-1.1.2.classpath"/>
    </path>

    <path id="crc-hadoop.runtime.production.module.classpath">
        <pathelement location="${crc-hadoop.output.dir}"/>
        <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
        <path refid="library.lib.classpath"/>
        <path refid="library.lib1.classpath"/>
        <path refid="library.hadoop-ant-1.1.2.classpath"/>
    </path>

    <path id="crc-hadoop.module.classpath">
        <path refid="${module.jdk.classpath.crc-hadoop}"/>
        <pathelement location="${crc-hadoop.output.dir}"/>
        <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
        <path refid="library.lib.classpath"/>
        <path refid="library.lib1.classpath"/>
        <path refid="library.hadoop-ant-1.1.2.classpath"/>
    </path>

    <path id="crc-hadoop.runtime.module.classpath">
        <pathelement location="${crc-hadoop.testoutput.dir}"/>
        <pathelement location="${crc-hadoop.output.dir}"/>
        <pathelement location="${idea.home}/lib/junit-4.10.jar"/>
        <path refid="library.lib.classpath"/>
        <path refid="library.lib1.classpath"/>
        <path refid="library.hadoop-ant-1.1.2.classpath"/>
    </path>


    <patternset id="excluded.from.module.crc-hadoop">
        <patternset refid="ignored.files"/>
    </patternset>

    <patternset id="excluded.from.compilation.crc-hadoop">
        <patternset refid="excluded.from.module.crc-hadoop"/>
    </patternset>

    <path id="crc-hadoop.module.sourcepath">
        <dirset dir="${module.crc-hadoop.basedir}">
            <include name="src"/>
        </dirset>
    </path>


    <target name="compile.module.crc-hadoop" depends="compile.module.crc-hadoop.production,compile.module.crc-hadoop.tests" description="Compile module CRC-Hadoop"/>

    <target name="compile.module.crc-hadoop.production" depends="register.custom.compilers" description="Compile module CRC-Hadoop; production classes">
        <mkdir dir="${crc-hadoop.output.dir}"/>
        <javac2 destdir="${crc-hadoop.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.crc-hadoop}/javac">
            <compilerarg line="${compiler.args.crc-hadoop}"/>
            <bootclasspath refid="crc-hadoop.module.bootclasspath"/>
            <classpath refid="crc-hadoop.module.production.classpath"/>
            <src refid="crc-hadoop.module.sourcepath"/>
            <patternset refid="excluded.from.compilation.crc-hadoop"/>
        </javac2>

        <copy todir="${crc-hadoop.output.dir}">
            <fileset dir="${module.crc-hadoop.basedir}/src">
                <patternset refid="compiler.resources"/>
                <type type="file"/>
            </fileset>
        </copy>
    </target>

    <target name="compile.module.crc-hadoop.tests" depends="register.custom.compilers,compile.module.crc-hadoop.production" description="compile module CRC-Hadoop; test classes" unless="skip.tests"/>

    <target name="clean.module.crc-hadoop" description="cleanup module">
        <delete dir="${crc-hadoop.output.dir}"/>
        <delete dir="${crc-hadoop.testoutput.dir}"/>
    </target>

    <target name="init" description="Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name="clean" depends="clean.module.crc-hadoop" description="cleanup all"/>

    <target name="build.modules" depends="init, clean, compile.module.crc-hadoop" description="build all modules"/>

    <target name="init.artifacts">
        <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
        <property name="artifact.output.calculatetitv" value="${basedir}/out/artifacts/CalculateTiTv"/>
        <mkdir dir="${artifacts.temp.dir}"/>
        <property name="temp.jar.path.CalculateTiTv.jar" value="${artifacts.temp.dir}/CalculateTiTv.jar"/>
    </target>

    <target name="artifact.calculatetitv" depends="init.artifacts, compile.module.crc-hadoop" description="Build &#39;CalculateTiTv&#39; artifact">
        <property name="artifact.temp.output.calculatetitv" value="${artifacts.temp.dir}/CalculateTiTv"/>
        <mkdir dir="${artifact.temp.output.calculatetitv}"/>
        <jar destfile="${temp.jar.path.CalculateTiTv.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
            <zipfileset file="${basedir}/META-INF/MANIFEST.MF" prefix="META-INF"/>
            <zipfileset file="${idea.home}/lib/junit-4.10.jar"/>
            <zipfileset dir="${crc-hadoop.output.dir}"/>
            <!--<zipfileset -->
            <manifest>
                <attribute name="Main-Class" value="main.bam.SimpleBamOperation" />
            </manifest>
            <zipgroupfileset dir="${lib}" includes="hadoop-bam-5.1.jar"/>
            <!--<zipgroupfileset dir="/Users/sibonli/IdeaProjects/CRC-Hadoop/lib" includes="hadoop-bam-5.1.jar"/>-->
        </jar>
        <copy file="${temp.jar.path.CalculateTiTv.jar}" tofile="${artifact.temp.output.calculatetitv}/CalculateTiTv.jar"/>
    </target>

    <target name="build.all.artifacts" depends="artifact.calculatetitv" description="Build all artifacts">
        <mkdir dir="${artifact.output.calculatetitv}"/>
        <copy todir="${artifact.output.calculatetitv}">
            <fileset dir="${artifact.temp.output.calculatetitv}"/>
        </copy>

        <!-- Delete temporary files -->
        <delete dir="${artifacts.temp.dir}"/>
    </target>

    <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>